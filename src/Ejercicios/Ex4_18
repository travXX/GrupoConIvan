package Tema_4;

import java.util.Scanner;

public class Ex4_18 {
	public static void main(String[]args) {
		Scanner lector = new Scanner(System.in);
		System.out.print("Que numero quieres saber si es primo o no?");
		int numUser = lector.nextInt();
		lector.nextLine();
		for(int cont=0;cont>=0;cont++) {
			int res=numUser%cont;
			if(res!=0) {
				System.out.println("El numero"+numUser+ "no es primo");
				break;
			}
		}
		System.out.print("El numero"+numUser+"es un numero primo");
	}
}
